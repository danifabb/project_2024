im.plotRGB(stacksent_2, r=3, g=2, b=1)
par(mfrow=c(1,2))
im.plotRGB(stacksent, r=3, g=2, b=1)
im.plotRGB(stacksent_2, r=3, g=2, b=1)

par(mfrow=c(1,2))
im.plotRGB(stacksent, r=4, g=2, b=1)
im.plotRGB(stacksent_2, r=4, g=2, b=1)

